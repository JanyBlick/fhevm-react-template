{
  "name": "@fhevm/react",
  "version": "1.0.0",
  "description": "React hooks and components for FHEVM SDK",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "require": "./dist/index.js",
      "import": "./dist/index.mjs",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts --external react",
    "dev": "tsup src/index.ts --format cjs,esm --dts --external react --watch",
    "clean": "rm -rf dist"
  },
  "keywords": [
    "fhevm",
    "react",
    "hooks",
    "ethereum"
  ],
  "license": "MIT",
  "peerDependencies": {
    "react": "^18.0.0"
  },
  "dependencies": {
    "@fhevm/sdk": "workspace:*",
    "ethers": "^6.9.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.45",
    "react": "^18.2.0",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3"
  }
}
