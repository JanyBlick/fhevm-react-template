{
  "name": "fhevm-sdk-monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "Monorepo for FHEVM SDK - Fully Homomorphic Encryption for Ethereum dApps",
  "workspaces": [
    "packages/*",
    "examples/*"
  ],
  "scripts": {
    "install:all": "npm install",
    "build": "npm run build --workspaces --if-present",
    "build:sdk": "npm run build -w @fhevm/sdk",
    "build:react": "npm run build -w @fhevm/react",
    "build:contracts": "npm run build -w @fhevm/contracts",
    "compile:contracts": "npm run compile -w @fhevm/contracts",
    "deploy:contracts": "npm run deploy -w @fhevm/contracts",
    "dev:nextjs": "npm run dev -w @fhevm/example-nextjs",
    "test": "npm run test --workspaces --if-present",
    "clean": "npm run clean --workspaces --if-present && rm -rf node_modules"
  },
  "keywords": [
    "fhevm",
    "fhe",
    "homomorphic-encryption",
    "ethereum",
    "dapp",
    "sdk"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.10.0",
    "typescript": "^5.3.3"
  }
}
