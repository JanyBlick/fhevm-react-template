{
  "name": "private-renovation-budget-manager",
  "version": "2.1.0",
  "description": "Private Renovation Budget Manager with Fully Homomorphic Encryption on Ethereum",
  "main": "index.js",
  "scripts": {
    "compile": "hardhat compile",
    "test": "hardhat test test/PrivateRenovationBudget.test.ts",
    "test:all": "hardhat test",
    "test:sepolia": "hardhat test test/PrivateRenovationBudget.sepolia.test.ts --network sepolia",
    "test:watch": "hardhat watch test",
    "test:gas": "REPORT_GAS=true hardhat test",
    "test:performance": "REPORT_GAS=true CONTRACT_SIZE=true hardhat test",
    "coverage": "hardhat coverage",
    "deploy": "hardhat run scripts/deploy.js --network sepolia",
    "deploy:local": "hardhat run scripts/deploy.js --network localhost",
    "dev": "npx http-server public -p 8080 -c-1 --cors",
    "typechain": "hardhat typechain",
    "clean": "hardhat clean",
    "lint": "npm run lint:sol && npm run lint:js",
    "lint:sol": "solhint 'contracts/**/*.sol'",
    "lint:js": "eslint 'test/**/*.ts' 'scripts/**/*.js' --max-warnings 0",
    "lint:fix": "npm run lint:sol:fix && npm run lint:js:fix",
    "lint:sol:fix": "solhint 'contracts/**/*.sol' --fix",
    "lint:js:fix": "eslint 'test/**/*.ts' 'scripts/**/*.js' --fix",
    "format": "prettier --write 'contracts/**/*.sol' 'test/**/*.ts' 'scripts/**/*.js' 'public/**/*.js'",
    "format:check": "prettier --check 'contracts/**/*.sol' 'test/**/*.ts' 'scripts/**/*.js' 'public/**/*.js'",
    "check:secrets": "npx detect-secrets-launcher --baseline .secrets.baseline",
    "check:size": "hardhat size-contracts",
    "check:security": "npm audit --audit-level=moderate && npm run check:secrets",
    "ci": "npm run lint && npm run compile && npm run test && npm run coverage && npm run check:security",
    "ci:quick": "npm run lint && npm run compile && npm run test",
    "ci:security": "npm run lint && npm run check:security",
    "precommit": "npm run lint && npm run format:check",
    "prepare": "husky install",
    "postinstall": "npm run typechain"
  },
  "keywords": [
    "fhevm",
    "zama",
    "fhe",
    "privacy",
    "renovation",
    "budget",
    "ethereum",
    "blockchain",
    "encryption",
    "smart-contracts",
    "testing"
  ],
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/private-renovation-budget"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^4.0.0",
    "@nomicfoundation/hardhat-chai-matchers": "^2.1.0",
    "@nomicfoundation/hardhat-ethers": "^3.1.0",
    "@nomicfoundation/hardhat-network-helpers": "^1.1.0",
    "@nomicfoundation/hardhat-verify": "^2.1.0",
    "@typechain/ethers-v6": "^0.5.1",
    "@typechain/hardhat": "^9.1.0",
    "@types/chai": "^4.3.20",
    "@types/mocha": "^10.0.10",
    "@types/node": "^20.19.8",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "chai": "^4.5.0",
    "detect-secrets-launcher": "^1.0.8",
    "dotenv": "^16.3.1",
    "eslint": "^8.56.0",
    "eslint-plugin-no-secrets": "^0.8.9",
    "eslint-plugin-security": "^1.7.1",
    "hardhat": "^2.19.0",
    "hardhat-contract-sizer": "^2.10.0",
    "hardhat-gas-reporter": "^2.3.0",
    "husky": "^8.0.3",
    "mocha": "^11.7.1",
    "prettier": "^3.1.0",
    "prettier-plugin-solidity": "^1.2.0",
    "solhint": "^4.1.0",
    "solidity-coverage": "^0.8.16",
    "ts-node": "^10.9.2",
    "typechain": "^8.3.2",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "@fhevm/solidity": "^0.8.0",
    "@zama-fhe/oracle-solidity": "^0.2.0",
    "ethers": "^6.9.0",
    "fhevm": "^0.6.2"
  }
}
